{
  "name": "{{cookiecutter.project_name}}",
  "version": "1.0.0",
  "main": "index.html",
  "description": "{{cookiecutter.short_description}}",
  "repository": {
    "type": "git",
    "url": "{{cookiecutter.repo_url}}"
  },
  "keywords": [
    "HTML5",
    "CSS",
    "JavaScript",
    "SASS"
  ],
  "bugs": {
    "url": "{{cookiecutter.issue_url}}"
  },
  "scripts": {
    "prestart": "npm run svg-sprite",
    "start": "cross-env NODE_ENV=development webpack-dev-server --config webpack.config.js",
    "prebuild": "npm run svg-sprite",
    "build": "rimraf dist && cross-env NODE_ENV=production webpack --config webpack.config.js --progress --profile --colors",
    "flow": "flow",
    "lint": "standard --parser babel-eslint",
    "lint:fix": "standard --parser babel-eslint --fix",
    "stylelint": "stylelint \"src/sass/**/*.scss\"",
    "stylelint:fix": "stylelint \"src/sass/**/*.scss\" --fix",
    "test:clean": "rimraf ./coverage",
    "pretest": "npm run test:clean",
    "test": "cross-env NODE_ENV=test jest --coverage",
    "test:watch": "cross-env NODE_ENV=test jest --coverage --watch",
    "lintAndTest": "npm run test:clean && npm run lint && npm run stylelint && npm run test",
    "coveralls": "cross-env NODE_ENV=test jest --coverage --runInBand && cat ./coverage/lcov.info | coveralls",
    "svg-sprite": "rimraf src/img/sprite.svg && svg-sprite --config svg-sprite.json src/img/**/*.svg"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": [
              "last 2 versions"
            ]
          },
          "modules": false
        }
      ],
      "flow",
      "stage-3"
    ],
    "env": {
      "test": {
        "plugins": [
          [
            "transform-es2015-modules-commonjs"
          ]
        ]
      }
    }
  },
  "jest": {
    "modulePaths": [
      "src"
    ],
    "moduleFileExtensions": [
      "js"
    ],
    "collectCoverageFrom": [
      "**/src/**/*.js"
    ],
    "moduleNameMapper": {
      "\\.(jpeg|jpg|png|gif|eot|webp|svg|ttf|woff2|mp3|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "coverageReporters": [
      "json",
      "lcov",
      "text"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "plugins": "flowtype",
    "ignore": [
      "**/dist/",
      "**/tests/",
      "**/flow-typed"
    ],
    "globals": [
      "describe",
      "it",
      "expect"
    ]
  },
  "license": "UNLICENSED",
  "private": true,
  "author": {
    "name": "{{cookiecutter.maintainer}}",
    "email": "{{cookiecutter.email}}"
  },
  "contributors": [ ],
  "homepage": "{{cookiecutter.homepage}}",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "normalize.css": "^7.0.0"
  },
  "engines": {},
  "devDependencies": {
    "autoprefixer": "^7.1.5",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-3": "^6.24.1",
    "coveralls": "^3.0.0",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.7",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-flowtype": "^2.39.1",
    "extract-text-webpack-plugin": "^3.0.1",
    "file-loader": "^1.1.5",
    "flow-bin": "^0.56.0",
    "flow-webpack-plugin": "^1.1.0",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "html-loader": "^0.5.1",
    "html-webpack-plugin": "^2.30.1",
    "image-webpack-loader": "^3.4.2",
    "jest": "^21.2.1",
    "node-sass": "^4.5.3",
    "postcss": "^6.0.13",
    "postcss-loader": "^2.0.7",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "standard": "^10.0.3",
    "standard-loader": "^6.0.1",
    "style-loader": "^0.19.0",
    "stylelint": "^8.2.0",
    "stylelint-config-idiomatic-order": "^5.0.0",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-scss": "^2.1.0",
    "stylelint-webpack-plugin": "^0.9.0",
    "svg-sprite": "^1.3.6",
    "webpack": "^3.6.0",
    "webpack-dev-server": "^2.9.1",
    "webpack-merge": "^4.1.0"
  }
}
